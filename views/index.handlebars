<div class="container">
    <h1 class="text-center">Eat-Da-Burger</h1>
    <div class="row">
        <div class="col-md-12 text-center">
            <img src="/assets/img/burger.png" width="400px" alt="">
        </div>
    </div>


    <div class="row text-center">
        <div class="row text-center mt-3">
            <div class="col-lg">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <div>
                        <div class="burger_name">
                            {{burger_name}}
                        </div>
                        <br>
                        <br>
                    </div>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-sm">

                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <button class="btn btn-success devourBtn" value="{{id}}">
                        Devour!
                    </button>
                    <br>
                    <br>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div><br><br>




        <div class="col-md-6 mt-3 text-center">

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <div class="burger_devoured">
                    <div>
                        {{burger_name}}
                    </div>
                    <br>
                    <br>
                </div>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <form class="create-form">

        <div class="form-group text-center">
            <input type="text" id="ca" placeholder="Enter a burger you want to eat" style="width: 50%" name="name">
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

        <h6 class="mt-3 text-center">Enter a burger you want to eat and click the "submit" button</h6>
    </form>

</div>